FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      p_rgh;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 299.0;

boundaryField
{
	hotWall{
//type fixedGradient;
//gradient uniform -2000.0;
type fixedValue;
value uniform 299.0;
	}
	coldWall{
//type fixedGradient;
//gradient uniform -2000.0;
type fixedValue;
value uniform 298.0;
	}

    lowerWall
    {
type fixedGradient;
gradient uniform 0.0;
    }

    atmosphere
    {
type fixedGradient;
gradient uniform -0.0;
    }

    defaultFaces
    {
        type            empty;
    }
}

